@model IEnumerable<MaleFashion.Models.BaiViet>
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-blog set-bg" data-setbg="/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Our Blog</h2>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">

            @foreach (var item in Model.Take(12))
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" data-setbg="/img/blog/@item.HinhAnh"></div>
                        <div class="blog__item__text">
                            <span><img src="~/img/icon/calendar.png" alt="">@string.Format("{0: MMMM dd, yyyy}", item.NgayDang)</span>
                            <h5>@item.TenBV</h5>
                            <a href="@Url.Action("BlogDetails","Blog", new { id = item.MaBV})">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Blog Section End -->